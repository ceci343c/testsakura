<html>
  <head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
  </head>
  <body>
    <nav>
      <input type="checkbox" id="check" />
      <label for="check" class="checkbtn">
        <i class="fa fa-bars fa-lg" style="color: #ff5e78;"></i>
      </label>
      <label class="logo"><img src="public/img/sakuralogo.svg" alt="Sakura logo" /></label>
      <ul>
        <li><a class="active" href="../index.html">Home</a></li>
        <li><a href="../programme.html">Programme</a></li>
        <li><a id="mapboothlink" href="../mapbooth.html">Map/Booths</a></li>
        <li><a id="about" href="../about.html">About</a></li>
        <li><a id="contact" href="../contact.html">Contact</a></li>
      </ul>
    </nav>
  </body>

  <style>
    nav a.active {
      background-color: #ff5e78;
      color: white;
    }

    .btn:hover {
      background-color: #ff5e78;
      color: white;
    }

    * {
      padding: 0;
      margin: 0;
      text-decoration: none;
      list-style: none;
      box-sizing: border-box;
    }

    img {
      margin-left: 10px;
      margin-top: 15px;
      width: 30rem;
    }

    nav {
      font-family: "Roboto", sans-serif;
      font-weight: bold;
      background: #ffebee;
      height: 150px;
      width: 100%;
    }

    ul {
      margin-bottom: 40px;
    }

    nav ul {
      float: right;
      margin-right: 20px;
    }

    nav ul li {
      display: inline-block;
      line-height: 170px;
      margin: 0 5px;
    }

    nav ul li a {
      color: #4b4b4b;
      font-size: 1.6667rem;
      padding: 7px 13px;
      border-radius: 5px;
    }

    a:hover {
      background: #ff5e78;
      color: white;
      transition: 0.5s;
    }

    .checkbtn {
      font-size: 30px;
      color: white;
      float: right;
      line-height: 80px;
      margin-right: 40px;
      cursor: pointer;
      display: none;
    }

    #check {
      display: none;
    }

    @media (max-width: 952px) {
      label.logo {
        padding-top: 20px;
      }
      nav ul li a {
        font-size: 26px;
        color: #4b4b4b;
      }
    }

    @media (max-width: 858px) {
      .checkbtn {
        display: block;
        margin-top: 30px;
      }

      ul {
        position: fixed;
        width: 100%;
        height: 100vh;
        background-color: #ffebee;
        top: 150px;
        left: -100%;
        text-align: center;
        transition: all 0.5s;
      }

      nav ul li {
        display: block;
        margin: 50px 0;
        line-height: 30px;
      }
      nav ul li a {
        font-size: 30px;
      }
      a:hover,
      a.active {
        background: none;
        color: #ff5e78;
      }
      #check:checked ~ ul {
        left: 0;
      }

      img {
        margin-left: 20px;
        margin-top: 30px;
        width: 20rem;
      }
    }

    @import url("https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap");
  </style>

  <script>
    const navLinks = document.querySelectorAll("nav a");

    // Loop gennem link-elementerne og tilføj en eventlistener til hvert link
    navLinks.forEach((link) => {
      link.addEventListener("click", function (event) {
        // Fjern den aktive klasse fra det element, der allerede har det
        const activeLink = document.querySelector("nav a.active");
        if (activeLink && activeLink !== this) {
          activeLink.classList.remove("active");
        }

        // Tilføj den aktive klasse til det klikkede link
        this.classList.add("active");
      });
    });

    // Aktiver "Home"-knappen som standard
    document.addEventListener("DOMContentLoaded", function () {
      const homeLink = document.querySelector('nav a[href="/"]');
      homeLink.classList.add("active");
    });
  </script>
</html>
