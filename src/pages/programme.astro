<style>
  .sakuratræ {
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: 35%;
  }

  img {
    width: 500px;
  }

  .eventcard {
    margin-top: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 5px;
  }
  * {
    font-family: "Roboto", sans-serif;
  }
  .card-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }

  h1 {
    margin-top: 80px;
    margin-bottom: 20px;
    text-align: center;
  }

  h2 {
    margin-left: 150px;
    margin-top: 80px;
    margin-bottom: 20px;
  }
  @media screen and (max-width: 1024px) {
    .sakuratræ {
      display: block;
      margin-left: auto;
      margin-right: auto;
      width: 45%;
    }

    img {
      width: 250px;
    }
  }
</style>
