---
const image = Astro.props.image;
const title = Astro.props.title;
const content = Astro.props.content;
---

<template>
  <a class="textbutton" img={image} href={title} target={content}>
    <span>
      <slot name="label" />
    </span>
    <div>
      <slot name="icon" />
    </div>
  </a>
</template>

<style>
  .card {
    border: 1px solid black;
    padding: 20px;
    margin: 10px;
    width: 300px;
    text-align: center;
  }
  img {
    width: 100%;
    max-height: 200px;
    object-fit: cover;
    margin-bottom: 10px;
  }
</style>
