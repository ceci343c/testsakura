---
import Layout from "../layouts/Layout.astro";
import Map from "../components/Map.astro";
import Contactform from "../components/Contactform.astro";
import Infomap from "../components/Infomap.astro";
---

<Layout title="Map and booths">
  <h1>Map and Booths</h1>
  <Map />
  <section class="contactformular">
    <Contactform />
    <div class="map"><Infomap /></div>
  </section>

  <style>
    .map {
      margin-top: -250px;
    }

    .contactformular {
      margin-top: 100px;
    }

    h1 {
      margin-top: 80px;
      margin-bottom: 20px;
      text-align: center;
      font-family: "Roboto", sans-serif;
      font-size: 60px;
      color: #4b4b4b;
    }
    @media screen and (max-width: 1024px) {
      .map {
        margin-top: 600px;
      }

        h1 {
      margin-bottom: 20px;
      color: #4b4b4b;
      font-family: "Roboto", sans-serif;
      font-weight: bold;
      font-size: 34px;
    }
  </style>
</Layout>
